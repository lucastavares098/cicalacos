@model uc4.Models.Pedidos

@{
    ViewData["Title"] = "Logado - Pedidos";
}

@if (ViewBag.Mensagem != null && ViewBag.Mensagem == "Pedido Cadastrado com sucesso")
{
    <div class="alert alert-success" role="alert">
        Pedido cadastrado com sucesso! <a asp-controller="Usuario" asp-action="Listagem" class="alert-link">Ver pedidos.</a>
    </div>
}

<div style="text-align: center">
    <h2>Cadastro de Pedidos</h2>
    <form asp-action="Pedidos" method="POST">
        <div class="row justify-content-center">
            <div class="col-md-6 mb-4">
                <label asp-for="Nome">Nome:<span style="color: red"> *</span></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="ItemPedido">Item Pedido:<span style="color: red"> *</span></label>
                <input asp-for="ItemPedido" class="form-control" />
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="Endereço">Endereço:<span style="color: red"> *</span></label>
                <input asp-for="Endereço" class="form-control" />
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="Valor">Valor:<span style="color: red"> *</span></label>
                <input asp-for="Valor" class="form-control" id="valorPedido" type="text" oninput="formatarMoeda(this)" />
            </div>
            <div class="col-md-6 mb-4">
                <label asp-for="FormaPag">Forma de pagamento:<span style="color: red"> *</span></label>
                <select asp-for="FormaPag" class="form-control">
                    <option selected disabled>Escolha uma opção</option>
                    <option value="Pix">Pix</option>
                    <option value="Dinheiro">Dinheiro</option>
                    <option value="Cartão de crédito/débito">Cartão de crédito/débito</option>
                </select>
            </div>
            <div class="col-12 mb-4 text-center">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </div>
        <br /><br />
    </form>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<!-- jQuery Mask -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
<!-- Site -->
<script src="~/js/site.js"></script>

