@model uc4.Models.Pedidos

@{
    ViewData["Title"] = "Logado - Pedidos";
}

<h2>Cadastro de Pedidos</h2>
<form asp-action="Pedidos" method="POST">
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" />
    </p>
    <p>
        <label asp-for="ItemPedido">Item Pedido:</label>
        <input asp-for="ItemPedido" />
    </p>
    <p>
        <label asp-for="Endereço">Endereço:</label>
        <input asp-for="Endereço" />
    </p>
    <p>
        <label asp-for="Valor">Valor:</label>
        <input asp-for="Valor" />
    </p>
    <p>
        <label asp-for="FormaPag">Forma de pagamento:</label>
        <input asp-for="FormaPag" />
    </p>
    <p>
        <input type="submit" value="Cadastrar" />
    </p>
    <br><br>
    <p id="pMensagem">@ViewBag.Mensagem</p>
</form>